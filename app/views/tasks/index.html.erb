<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th>Priority</th>
      <th>User</th>
      <th>Super task</th>
      <th>Task admin user</th>
      <th>Progress</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Estimate time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.type %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.user_id %></td>
        <td><%= task.super_task_id %></td>
        <td><%= task.task_admin_user_id %></td>
        <td><%= task.progress %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.estimate_time %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

